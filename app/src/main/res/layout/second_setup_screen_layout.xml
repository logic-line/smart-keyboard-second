<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/highlight_translucent_color_klp">


    <ImageView
        android:id="@+id/icon"
        android:layout_width="@dimen/_60sdp"
        android:layout_height="@dimen/_60sdp"
        android:background="@drawable/image_rounded_corner"
        android:clipToOutline="true"
        android:scaleType="fitXY"
        android:src="@mipmap/ic_launcher"
        app:layout_constraintBottom_toTopOf="@+id/bottom_layout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:targetApi="s" />


    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_5sdp"
        android:text="@string/english_ime_name"
        android:textAlignment="center"
        android:textColor="@color/logo_colour"
        android:textSize="@dimen/_14sdp"
        app:layout_constraintTop_toBottomOf="@+id/icon" />


    <LinearLayout
        android:id="@+id/bottom_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/setup_layout_bg_1"
        android:orientation="vertical"
        android:paddingHorizontal="@dimen/_6sdp"
        android:paddingTop="@dimen/_15sdp"
        android:paddingBottom="@dimen/_20sdp"
        app:layout_constraintBottom_toBottomOf="parent">


        <TextView
            android:id="@+id/setup_step2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/_10sdp"
            android:text="Step 2"
            android:textAlignment="center"
            android:textColor="@color/logo_colour"
            android:textSize="@dimen/_14sdp"
            android:textStyle="bold" />


        <Button
            android:id="@+id/btn_select_keyboard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_5sdp"
            android:background="@drawable/setup_button_bg_1"
            android:text="Select Keyboard"
            android:textColor="@color/white"
            tools:ignore="MissingConstraints" />


    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>